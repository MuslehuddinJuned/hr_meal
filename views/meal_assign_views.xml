<odoo>
    <record id="view_meal_assign_form" model="ir.ui.view">
        <field name="name">meal.assign.form</field>
        <field name="model">meal.assign</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="employee_id" 
                            widget="many2one_avatar" 
                            options="{'no_create': True, 'no_create_edit': True}"  
                            context="{'exclude_assigned_for_meal': True}" 
                        />
                        <field name="meal_type_ids" widget="many2many_tags" options="{'no_create': True, 'no_create_edit': True}"/>
                        <field name="meal_group_id" options="{'no_create': True, 'no_create_edit': True}"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    
    <record id="view_meal_assign_list" model="ir.ui.view">
        <field name="name">meal.assign.list</field>
        <field name="model">meal.assign</field>
        <field name="arch" type="xml">
            <list>
                <field name="department_id"/>
                <field name="employee_id" widget="many2one_avatar"/>
                <field name="meal_type_ids" widget="many2many_tags" />
                <field name="meal_group_id" />
            </list>
        </field>
    </record>

    <record id="view_meal_assign_search" model="ir.ui.view">
        <field name="name">meal.assign.search</field>
        <field name="model">meal.assign</field>
        <field name="arch" type="xml">
            <search string="Assign Meals Search">

                <field name="employee_id"/>
                <field name="meal_type_ids"/>
                <field name="meal_group_id"/>
                <separator string="Group By"/>
                <filter
                    string="Meal Group"
                    name="group_meal_group_id"
                    context="{'group_by': 'meal_group_id'}"/>
                <!-- <filter
                    string="Department"
                    name="group_department_id"
                    context="{'group_by': 'department_id'}"/> -->

            </search>
        </field>
    </record>
</odoo>