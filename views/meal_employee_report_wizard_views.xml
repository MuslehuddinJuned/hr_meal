<odoo>
    <record id="view_meal_employee_report_wizard" model="ir.ui.view">
        <field name="name">meal.employee.report.wizard.form</field>
        <field name="model">meal.employee.report.wizard</field>
        <field name="arch" type="xml">
            <form string="Meal Employee Report">
                <group>
                    <field name="date_from"/>
                    <field name="date_to"/>
                </group>
                <footer>
                    <button name="action_calculate"
                            type="object"
                            string="Calculate"
                            class="btn-primary"/>
                    <button string="Cancel"
                            special="cancel"
                            class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_meal_employee_report_wizard" model="ir.actions.act_window">
        <field name="name">Meal Employee Report</field>
        <field name="res_model">meal.employee.report.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
</odoo>
