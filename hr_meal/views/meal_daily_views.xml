<odoo>
    <record id="view_meal_daily_list" model="ir.ui.view">
        <field name="name">meal.daily.list</field>
        <field name="model">meal.daily</field>
        <field name="arch" type="xml">
            <list string="Daily Meals" multi_edit="1">
                <field name="date"/>
                <field name="employee_id" readonly="1" widget="many2one_avatar" options="{'no_create': True, 'no_create_edit': True}"/>
                <field name="department_id" readonly="1"/>
                <field name="meal_type_id" options="{'no_create': True, 'no_create_edit': True}"/>
                <field name="number_of_meal"/>
            </list>
        </field>
    </record>

    <record id="view_meal_daily_form" model="ir.ui.view">
        <field name="name">meal.daily.form</field>
        <field name="model">meal.daily</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="date"/>
                        <field name="employee_id" widget="many2one_avatar" options="{'no_create': True, 'no_create_edit': True}"/>
                        <field name="meal_type_id" options="{'no_create': True, 'no_create_edit': True}"/>
                        <field name="number_of_meal"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_meal_daily_pivot" model="ir.ui.view">
        <field name="name">meal.daily.pivot</field>
        <field name="model">meal.daily</field>
        <field name="arch" type="xml">
            <pivot string="Meal Report">
                <field name="employee_id" type="col"/>
                <field name="meal_type_id" type="row"/>
                <field name="number_of_meal" type="measure"/>
                <field name="number_of_meal_weightage" type="measure"/>
            </pivot>
        </field>
    </record>

    <!-- Search View -->
    <record id="view_meal_daily_search" model="ir.ui.view">
        <field name="name">meal.daily.search</field>
        <field name="model">meal.daily</field>
        <field name="arch" type="xml">
            <search string="Daily Meals Search">
                <field name="employee_id"/>
                <field name="meal_type_id"/>
                
                <!-- Filters -->
                <filter name="today" string="Today"
						domain="[('date', '=', 'today')]" />
                <filter name="yesterday" string="Yesterday"
						domain="[('date', '=', 'today -1d')]" />
                <!-- <filter name="this_week" string="This Week" domain="['|', ('date','&gt;=', (context_today() - 7)),('date','&lt;=',context_today())]"/> -->
                <filter name="filter_expected_date" string="Date Range" date="date"/>
                
                <!-- Group By -->
                <separator string="Group By"/>
                <filter string="Meal Type" name="group_meal_type_id" context="{'group_by':'meal_type_id'}"/>
                <filter string="Employee" name="group_employee_id" context="{'group_by':'employee_id'}"/>
                <!-- <filter string="Department" name="group_department_id" context="{'group_by':'department_id'}"/> -->
            </search>
        </field>
    </record>
</odoo>
