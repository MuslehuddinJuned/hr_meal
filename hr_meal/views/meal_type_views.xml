<odoo>
    <record id="view_meal_type_list" model="ir.ui.view">
        <field name="name">meal.type.list</field>
        <field name="model">meal.type</field>
        <field name="arch" type="xml">
            <list string="Meal Types" editable="bottom">
                <field name="name"/>
                <field name="description"/>
                <field name="meal_package_id" widget="many2one" options="{'no_create': True, 'no_create_edit': True}"/>
                <field name="weightage"/>
                <field name="subsidy_type"/>
                <field name="subsidy"/>
            </list>
        </field>
    </record>

    <record id="view_meal_type_form" model="ir.ui.view">
        <field name="name">meal.type.form</field>
        <field name="model">meal.type</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="description"/>
                        <field name="meal_package_id"/>
                        <field name="weightage"/>
                        <field name="subsidy_type"/>
                        <field name="subsidy"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_meal_package_list" model="ir.ui.view">
        <field name="name">meal.package.list</field>
        <field name="model">meal.package</field>
        <field name="arch" type="xml">
            <list string="Meal packages" editable="bottom">
                <field name="name"/>
                <field name="description"/>
            </list>
        </field>
    </record>

    <record id="view_meal_package_form" model="ir.ui.view">
        <field name="name">meal.package.form</field>
        <field name="model">meal.package</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="description"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
