<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

        <!-- ========================= -->
        <!-- Meal Expanse List View -->
        <!-- ========================= -->
        <record id="view_meal_expanse_list" model="ir.ui.view">
            <field name="name">meal.expanse.list</field>
            <field name="model">meal.expanse</field>
            <field name="arch" type="xml">
                <list>
                    <field name="date"/>
                    <field name="amount" widget="monetary"/>
                    <field name="meal_package_id"/>
                </list>
            </field>
        </record>

        <!-- ========================= -->
        <!-- Meal Expanse Form View -->
        <!-- ========================= -->
        <record id="view_meal_expanse_form" model="ir.ui.view">
            <field name="name">meal.expanse.form</field>
            <field name="model">meal.expanse</field>
            <field name="arch" type="xml">
                <form string="Meal Expanse">
                    <sheet>

                        <group>
                            <group>
                                <field name="date"/>
                                <field name="meal_package_id" options="{'no_create': True, 'no_create_edit': True}"/>
                            </group>
                            <group>
                                <field name="amount" widget="monetary" readonly="1"/>
                                <field name="remarks"/>
                            </group>
                        </group>

                        <notebook>
                            <page string="Expense Lines">
                                <field name="expanse_line_ids">
                                    <list editable="bottom">
                                        <field name="product_id" options="{'no_create': True, 'no_create_edit': True}"/>
                                        <!-- <field name="unit" readonly="1" domain="[('category_id', '=', product_id.uom_id.category_id)]"/> -->
                                        <field name="quantity"/>
                                        <field name="unit_price" widget="monetary"/>
                                        <field name="total_price" widget="monetary" readonly="1"/>
                                    </list>
                                </field>
                            </page>
                        </notebook>

                    </sheet>

                    <!-- Chatter -->
                    <chatter reload_on_follower="True"/>
                    <!-- <div class="oe_chatter">
                        <field name="message_follower_ids" groups="base.group_user"/>
                        <field name="message_ids"/>
                    </div> -->
                </form>
            </field>
        </record>

        <!-- ========================= -->
        <!-- Meal Expanse Line List View -->
        <!-- ========================= -->
        <record id="view_meal_expanse_line_list" model="ir.ui.view">
            <field name="name">meal.expanse.line.list</field>
            <field name="model">meal.expanse.line</field>
            <field name="arch" type="xml">
                <list>
                    <field name="meal_expanse_id"/>
                    <field name="product_id"/>
                    <field name="unit"/>
                    <field name="quantity"/>
                    <field name="unit_price"/>
                    <field name="total_price"/>
                </list>
            </field>
        </record>

        <!-- Search View -->
        <record id="view_meal_expanse_search" model="ir.ui.view">
            <field name="name">meal.expanse.search</field>
            <field name="model">meal.expanse</field>
            <field name="arch" type="xml">
                <search string="Expanse Meals Search">                    
                    <!-- Filters -->
                    <filter name="today" string="Today"
                            domain="[('date', '=', 'today')]" />
                    <filter name="yesterday" string="Yesterday"
                            domain="[('date', '=', 'today -1d')]" />
                    <!-- <filter name="this_week" string="This Week" domain="['|', ('date','&gt;=', (context_today() - 7)),('date','&lt;=',context_today())]"/> -->
                    <filter name="filter_expected_date" string="Date Range" date="date"/>
                    
                    <!-- Group By -->
                    <separator string="Group By"/>
                    <filter string="Package" name="group_meal_package_id" context="{'group_by':'meal_package_id'}"/>
                </search>
            </field>
        </record>

        <!-- ========================= -->
        <!-- Meal Expanse Action -->
        <!-- ========================= -->
        <record id="action_meal_expanse" model="ir.actions.act_window">
            <field name="name">Meal Expenses</field>
            <field name="res_model">meal.expanse</field>
            <field name="view_mode">list,form</field>
        </record>

    </data>
</odoo>

